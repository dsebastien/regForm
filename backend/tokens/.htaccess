SetEnv PHP_VER 7_0

# Prevent directory listing
Options -Indexes

# CORS
# Basic security headers
<IfModule mod_headers.c>
Header always unset server
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Xss-Protection "1; mode=block"
Header always set X-Content-Type-Options "nosniff"
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods: "GET,POST,OPTIONS,DELETE,PUT,PATCH"
Header always set content-security-policy: "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src * data:; script-src 'self' 'unsafe-inline'; child-src 'self'; font-src 'self' data:; frame-ancestors 'none';report-uri http://www.duboishubert.be/csp_report.php; connect-src 'self'; form-action 'self'; reflected-xss block; base-uri http://www.duboishubert.be; object-src 'none'"
</IfModule>
